<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FilterActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/AppTheme"
        app:popupTheme="@style/AppTheme"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/mydrawable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Birth Events"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Filter By Birth Events"></TextView>
            </LinearLayout>
            <android.support.v7.widget.SwitchCompat
                android:layout_gravity="center"
                android:id="@+id/birthEvents"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.SwitchCompat>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/mydrawable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="College Graduation Events"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Filter By College Graduation Events"></TextView>
            </LinearLayout>
            <android.support.v7.widget.SwitchCompat
                android:layout_gravity="center"
                android:id="@+id/collegeEvents"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.SwitchCompat>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/mydrawable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Marriage Events"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Filter By Marriage Events"></TextView>
            </LinearLayout>
            <android.support.v7.widget.SwitchCompat
                android:layout_gravity="center"
                android:id="@+id/marriageEvents"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.SwitchCompat>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/mydrawable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Death Events"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Filter By Death Events"></TextView>
            </LinearLayout>
            <android.support.v7.widget.SwitchCompat
                android:layout_gravity="center"
                android:id="@+id/deathEvents"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.SwitchCompat>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/mydrawable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Father's Side"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Filter By Father's Side of the Family"></TextView>
            </LinearLayout>
            <android.support.v7.widget.SwitchCompat
                android:layout_gravity="center"
                android:id="@+id/fatherSide"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.SwitchCompat>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/mydrawable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Mother's Side"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Filter By Mother's Side of the Family"></TextView>
            </LinearLayout>
            <android.support.v7.widget.SwitchCompat
                android:layout_gravity="center"
                android:id="@+id/motherSide"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.SwitchCompat>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/mydrawable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Male Events"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Filter By Gender"></TextView>
            </LinearLayout>
            <android.support.v7.widget.SwitchCompat
                android:layout_gravity="center"
                android:id="@+id/maleEvents"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.SwitchCompat>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/mydrawable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Female Events"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Filter By Gender"></TextView>
            </LinearLayout>
            <android.support.v7.widget.SwitchCompat
                android:layout_gravity="center"
                android:id="@+id/femaleEvents"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.SwitchCompat>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>